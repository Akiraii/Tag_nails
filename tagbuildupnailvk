        unsetall
        %work = 1
      }
      if (%tag1) || (%tag2) || (%tag3) || (%tag4) { tagsay }
    }
  }
} 


alias tagsay {
  %tag = %tag #khv #khabarovsk #—Ö–∞–±–∞—Ä–æ–≤—Å–∫ 
  .timer $+ t 1 1 msg #channail $nick  $+ %tag
  unsetall
  %work = 1
}
