      } 
      elseif ($1 == 0) {
        .timer $+ i 1 1 msg %channail $nick %a %u
        /unsetall
        %work = 1
      }
    }
    if (%taginfo == 4) {
      if ($1 == 1) || ($2 == 1) || ($3 == 1) || ($4 == 1) { 
