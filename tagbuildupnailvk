        .timer $+ i 1 1 msg %channail $nick %a %u
        /unsetall
        %work = 1
      }
    }
    if (%taginfo == 2) {
      if ($1 == 1) {
        .timer $+ i 1 1 msg %channail $nick %a %b
        %tag = %tag #—Ü–≤–µ—Ç–Ω–æ–π #color
        .timer 1 1 inc %taginfo
        .timer $+ t 1 1 msg %channail $nick %l
      }
      elseif ($1 == 2) {
        .timer $+ i 1 1 msg %channail $nick %a %c
        %tag = %tag #–±–µ–ª—ã–π #white
        .timer 1 1 inc %taginfo
        .timer $+ t 1 1 msg %channail $nick %l
      }         
      elseif ($1 == 3) {
        if (!%z) {
          .timer $+ i 1 1  msg %channail $nick %a %d
          %tag = %tag #–≤–∏—Ç—Ä–∞–∂–Ω—ã–π #stained
          .timer 1 1 inc %taginfo
          .timer $+ t 1 1 msg %channail $nick %l
        } 
        else { 
          .timer $+ i 1 1 msg #channail $nick 0,1 $+ –ó–∞–ø—Ä–µ—â–µ–Ω–Ω—ã–π —Ñ—Ä–µ–Ω—á: %d 0,1 $+ –î–æ—Å—Ç—É–ø–Ω—ã–π —Ñ—Ä–µ–Ω—á: %b %c
        }
      }
      elseif ($1 == 0) {
        .timer $+ i 1 1 msg %channail $nick %a %u
        /unsetall
        %work = 1
      }
    }
    if (%taginfo == 3) {
      if ($1 == 1) {
        .timer $+ i 1 1 msg %channail $nick %a %g
        %tag = %tag #–ø–∞–π–ø #pipe
        .timer 1 1 inc %taginfo
        .timer $+ t 1 1 msg %channail $nick %q
      }
      elseif ($1 == 2) {
        .timer $+ i 1 1 msg %channail $nick %a %h
        %tag = %tag #–æ–≤–∞–ª #oval #ellipse
        .timer 1 1 inc %taginfo
        .timer $+ t 1 1 msg %channail $nick %q
      }       
      elseif ($1 == 3) {
