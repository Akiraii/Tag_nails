    %h = 8,1 $+  $+ 2. –û–≤–∞–ª
    %i = 9,1 $+  $+ 3. –ö–≤–∞–¥—Ä–∞—Ç
    %j = 11,1 $+  $+ 4. –ú–∏–Ω–¥–∞–ª—å
    %k = 13,1 $+  $+ 5. –°—Ç–∏–ª–µ—Ç
    %l = 0,1–í—ã–±–µ—Ä–∏—Ç–µ —Ñ–æ—Ä–º—É: %g %h %i %j %k %u
    %m = 4,1 $+  $+ 1. –ñ–∏–¥–∫–∏–µ –∫–∞–º–Ω–∏
    %n = 8,1 $+  $+ 2. –õ–∏—Ç—å—ë
    %o = 9,1 $+  $+ 3. –†–æ—Å–ø–∏—Å—å
    %p = 11,1 $+  $+ 4. –ë–∞—Ä—Ö–∞—Ç–Ω—ã–π –ø–µ—Å–æ–∫
    %q = 0,1–í—ã–±–µ—Ä–∏—Ç–µ –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ —É—Å–ª—É–≥–∏: %m %n %o %p %u
    if ($1 == !tag) {
      %taginfo = 1
      .timer $+ t 1 1 msg %channail $nick 0,1–í—ã–±–µ—Ä–∏—Ç–µ —Ç–∏–ø –ø—Ä–æ—Ü–µ–¥—É—Ä—ã: %y %x %w %v %u
    }
    elseif ($1 == !tag0) {
      .timer $+ i 1 1 msg %channail $nick %a %u
      unsetall | msg %channail del all
      %work = 1
    }
    if (%taginfo == 1) {
      if ($1 == 1) {
        .timer $+ i 1 1 msg %channail $nick %a %y
        %tag = %tag $+ #–Ω–∞—Ä–∞—â–∏–≤–∞–Ω–∏–µ #buildup %nail %gel %french
        .timer 1 1 inc %taginfo
        .timer $+ t 1 1 msg %channail $nick %f
      }
      if ($1 == 2) {
        .timer $+ i 1 1 msg %channail $nick %a %x
        %tag = %tag $+ #–∫–æ—Ä—Ä–µ–∫—Ü–∏—è #correction %nail %gel %french
        .timer 1 1 inc %taginfo
        .timer $+ t 1 1 msg %channail $nick %f
      }
      if ($1 == 3) {
        .timer $+ i 1 1 msg %channail $nick %a %w
        %tag = %tag $+ #–ø–æ–∫—Ä—ã—Ç–∏–µ #cover %nail %gel %lacquer %french
        .timer 1 1 inc %taginfo
        .timer $+ t 1 1 msg %channail $nick %f
        %z = 1
      }
      if ($1 == 4) {
        .timer $+ i 1 1 msg %channail $nick %a %v
        %tag = %tag $+ #—É–∫—Ä–µ–ø–ª–µ–Ω–∏–µ #strengthening %nail %gel %french
        .timer 1 1 inc %taginfo
        .timer $+ t 1 1 msg %channail $nick %f
      }
